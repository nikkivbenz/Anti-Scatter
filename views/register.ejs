<!--
  This is the registration page. It displays a form with an email, username, and password field.
  If the user enters an email or username that already exists, an error message is displayed.
-->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up Page</title>
  <style>
    /* Style for the error message */
    .error-message {
      color: red;
    }
  </style>
</head>
<body>
  <h1>Sign Up</h1>
  <!-- Adding a registration form with email, username, and password-->
  <form method="POST" action="/register">
    <label for="email">Email Address:</label>
    <input type="text" id="email" name="email" required><br><br>
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" required><br><br>
    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required><br><br>
    <!-- Display error message for trying to use an existing email or username -->
    <% if (error) { %>
      <div class="error-message"><%= error %></div>
    <% } %>
    <button type="submit">Sign Up</button>
  </form>
</body>
</html>