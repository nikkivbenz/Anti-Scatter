{
  "manifest_version": 2,
  "name": "Website Blocker",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*",
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
