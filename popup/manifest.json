{
  "manifest_version": 3,
  "name": "Quick website blocker",
  "version": "1.0",
  "permissions": ["activeTab", "tabs", "storage", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"]
    }
  ]
}
